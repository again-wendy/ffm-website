{{> hirer-nav}}

<section id="hero" class="hirer">
    <div class="hero-title">
        <h1>
            {{ translation.hirer.HERO_TEXT }}
        </h1>
    </div>
</section>

<section id="hirer-intro" class="hirer-intro full-screen">
    <div class="container">
        <h2 class="section-title">{{ translation.hirer.INTRO_TITLE }}</h2>
        <div class="section-container">
            <p class="sub-title">{{ translation.hirer.INTRO_SUBTITLE }}</p>
            <div class="section-text">
                <p>{{ translation.hirer.INTRO_TEXT_1 }}</p>
                <button class="btn-light-grey-xl">{{ translation.contact-section.MAKE_CONTACT }}</button>
            </div>
            <img src="./public/images/puzzel-aap.png" alt="Puzzle Monkey">
        </div>
    </div>
</section>

<section id="kit" class="full-screen">
    <div class="container">
        <h2 class="section-title">{{ translation.hirer.KIT_INTRO }}</h2>
        <div class="section-container">
            <img src="./public/images/ffm-aansluitkit.png" alt="De FlexForceMonkey Aansluitbox">
            <div class="section-text">
                <p>{{ translation.hirer.KIT_TEXT }}</p>
                <button class="btn-secondary-xl">{{ translation.hirer.GET_KIT }}</button>
            </div>
        </div>
    </div>
</section>

<section id="hirer-options" class="full-screen">
    <div class="container">
        <h2 class="section-title">{{ translation.hirer.DIFFERENT_OPTIONS }}</h2>
        <div class="section-container">
            <p class="sub-title">{{ translation.hirer.OPTIONS }}</p>
            <div class="section-text">
                <p>{{ translation.hirer.OPTION_1 }}</p>
                <p>{{ translation.hirer.OPTION_2 }}</p>
                <button class="btn-light-grey-xl">{{ translation.mailchimp.SUBSCRIBE_TO }}</button>
            </div>
            <img src="./public/images/computeraap.png" alt="Computer Monkey">
        </div>
    </div>
</section>

