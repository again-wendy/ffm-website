{{> hirer-nav}}

<section id="hero" class="hirer">
    <div class="hero-title">
        <h1>
            {{ translation.hirer.HERO_TEXT }}
        </h1>
    </div>
</section>

<section id="hirer-intro" class="hirer-intro full-screen">
    <div class="container">
        <h2 class="section-title">{{ translation.hirer.INTRO_TITLE }}</h2>
        <div class="section-container">
            <div class="section-text scrollleft">
                <p>{{ translation.hirer.INTRO_TEXT }}</p>
                <button class="btn-light-grey-xl">{{ translation.hirer.GET_CONTACT }}</button>
            </div>
            <img class="scrollright" src="./public/images/puzzel-aap.png" alt="Puzzle Monkey">
        </div>
    </div>
</section>

<div class="banner banner-hirer">
    <div class="banner-container animation-banner">
       <h1 class="banner-title title-1">{{ translation.general.FASTER }}</h1>
        <h1 class="banner-title title-2">{{ translation.general.FLEXIBLE }}</h1>
        <h1 class="banner-title title-3">{{ translation.general.CAREFREE }}</h1>
        <h1 class="banner-title title-4">{{ translation.general.OPTIMAL }}</h1>
    </div>
</div>

<section id="hirer-kit" class="full-screen">
    <div class="container">
        <h2 class="section-title">{{ translation.hirer.KIT_INTRO }}</h2>
        <div class="section-container">
            <img class="scrollleft" src="./public/images/ffm-aansluitkit.png" alt="De FlexForceMonkey Aansluitbox">
            <div class="section-text scrollright">
                <p>{{ translation.hirer.KIT_TEXT }}</p>
            </div>
            <div class="text-center">
                <button class="btn-complementary-xl">{{ translation.hirer.GET_KIT }}</button>
            </div>
        </div>
    </div>
</section>

<section id="hirer-options" class="full-screen">
    <div class="container">
        <h2 class="section-title">{{ translation.hirer.CONNECT }}</h2>
        <div class="section-container">
            <p class="sub-title">{{ translation.hirer.CONNECT_SUBTITLE }}</p>
            <div class="section-text scrollleft">
                <p>{{ translation.hirer.CONNECT_TEXT }}</p>
                <button class="btn-light-grey-xl">{{ translation.hirer.GET_CONTACT }}</button>
            </div>
            <img class="scrollright" src="./public/images/computeraap.png" alt="Computer Monkey">
        </div>
    </div>
</section>

{{> contact}}