{{> freelancer-nav}}

<section id="hero" class="freelancer">
    <div class="hero-title">
        <h1>{{ translation.freelancer.HERO_TEXT }}</h1>
    </div>
</section>

<section id="freelancer-intro" class="full-screen">
    <div class="container">
        <h2 class="section-title">{{ translation.freelancer.INTRO_TITLE }}</h2>
        <div class="section-container">
            <p class="sub-title">{{ translation.freelancer.INTRO_SUBTITLE }}</p>
            <div class="section-text scrollleft">
                <p>{{ translation.freelancer.INTRO_TEXT }}</p>
                <button class="btn-light-grey-xl">{{ translation.freelancer.REGISTER_ACCOUNT }}</button>
            </div>
            <img class="scrollright" src="./public/images/computeraap.png" alt="Computer Monkey">
        </div>
    </div>
</section>

<section id="try" class="full-screen">
    <div class="container">
        <h2 class="section-title">{{ translation.freelancer.TRY_TITLE }}</h2>
        <div class="section-container scrollleft">
            <p class="sub-title">{{ translation.freelancer.TRY_SUBTITLE }}</p>
            <div class="section-text">
                <p>{{ translation.freelancer.TRY_TEXT }}</p>
                <button class="btn-complementary-xl">{{ translation.freelancer.TRY_NOW }}</button>
            </div>
        </div>
    </div>
    <img class="small-screen" src="./public/images/stekker-aap-small.png" alt="{{ translation.freelancer_TRY_TITLE }}">
    <img class="normal-screen" src="./public/images/stekker-aap-normal.png" alt="{{ translation.freelancer_TRY_TITLE }}">
    <img class="big-screen" src="./public/images/stekker-aap-big.png" alt="{{ translation.freelancer_TRY_TITLE }}">
</section>

<section id="work" class="full-screen">
    <div class="container">
        <h2 class="section-title">{{ translation.freelancer.WORK_TITLE }}</h2>
        <div class="section-container scrollright">
            <span class="fa fa-handshake"></span>
            <div class="section-text">
                <p>{{ translation.freelancer.WORK_TEXT }}</p>
                <button class="btn-light-grey-xl">{{ translation.freelancer.WORK_REGISTER }}</button>
            </div>
        </div>
    </div>
</section>

{{> contact}}