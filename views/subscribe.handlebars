<div id="subscribe-page">
    <nav class="navbar">
        <div class="brand">
            <a href="/">FlexForceMonkey</a>
        </div>
    </nav>
    <div class="main">
        <div class="container">
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ translation.subscribe.REGISTER }}</h3>
                </div>
                <div class="panel-body">
                    <div class="text-center">
                        {{#if messages.success}}
                            <p class="flash flash-success">{{ messages.success }}</p>
                        {{/if}}
                        {{#if messages.error}}
                            <p class="flash flash-error">{{ messages.error }}</p>
                        {{/if}}
                    </div>
                    <form class="subscribeform" method="POST" action="selfservice-subscribe" novalidate>
                        <div class="form-column left">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" name="email" id="email" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <label for="companyname">{{ translation.subscribe.COMPANYNAME }}</label>
                                <input type="text" name="companyname" id="companyname" placeholder="{{ translation.subscribe.COMPANYNAME }}">
                            </div>
                            <div class="form-group">
                                <label for="firstname">{{ translation.subscribe.FIRSTNAME }}</label>
                                <input type="text" name="firstname" id="firstname" placeholder="{{ translation.subscribe.FIRSTNAME }}">
                            </div>
                            <div class="form-group">
                                <label for="lastname">{{ translation.subscribe.LASTNAME }}</label>
                                <input type="text" name="lastname" id="lastname" placeholder="{{ translation.subscribe.LASTNAME }}">
                            </div>
                            <div class="form-group checkboxes">
                                <input type="checkbox" name="emailnewsletters" id="emailnewsletters">
                                <label for="emailnewsletters">{{ translation.subscribe.EMAILNEWSLETTERS }}</label>
                                <input type="checkbox" name="emailproductupdates" id="emailproductupdates">
                                <label for="emailproductupdates">{{ translation.subscribe.EMAILPRODUCTUPDATES }}</label>
                                <input type="checkbox" name="emailcomcontact" id="emailcomcontact">
                                <label for="emailcomcontact">{{ translation.subscribe.EMAILCOMCONTACT }}</label>
                            </div>
                        </div>
                        <div class="form-column right">
                            <h5>{{ translation.subscribe.YOURSUB }}</h5>
                            <button class="btn-primary">{{ translation.subscribe.COMPARE }}</button>
                            <div class="form-group">
                                <select name="sub" id="sub">
                                    {{#iff sub '==' 'intbuy'}}
                                        <option value="IntegrationEngineBuyer" selected>{{ translation.subscribe.INTENGBUY }}</option>
                                        <option value="IntegrationEngineSeller">{{ translation.subscribe.INTENGSEL }}</option>
                                        <option value="CaoEngineBuyer">{{ translation.subscribe.CLAENGBUY }}</option>
                                        <option value="CaoEngineSeller">{{ translation.subscribe.CLAENGSEL }}</option>
                                        <option value="StandardCustomer">{{ translation.subscribe.STANDARD }}</option>
                                    {{/iff}}
                                    {{#iff sub '==' 'intsel'}}
                                        <option value="IntegrationEngineBuyer">{{ translation.subscribe.INTENGBUY }}</option>
                                        <option value="IntegrationEngineSeller" selected>{{ translation.subscribe.INTENGSEL }}</option>
                                        <option value="CaoEngineBuyer">{{ translation.subscribe.CLAENGBUY }}</option>
                                        <option value="CaoEngineSeller">{{ translation.subscribe.CLAENGSEL }}</option>
                                        <option value="StandardCustomer">{{ translation.subscribe.STANDARD }}</option>
                                    {{/iff}}
                                    {{#iff sub '==' 'clabuy'}}
                                        <option value="IntegrationEngineBuyer">{{ translation.subscribe.INTENGBUY }}</option>
                                        <option value="IntegrationEngineSeller">{{ translation.subscribe.INTENGSEL }}</option>
                                        <option value="CaoEngineBuyer" selected>{{ translation.subscribe.CLAENGBUY }}</option>
                                        <option value="CaoEngineSeller">{{ translation.subscribe.CLAENGSEL }}</option>
                                        <option value="StandardCustomer">{{ translation.subscribe.STANDARD }}</option>
                                    {{/iff}}
                                    {{#iff sub '==' 'clasel'}}
                                        <option value="IntegrationEngineBuyer">{{ translation.subscribe.INTENGBUY }}</option>
                                        <option value="IntegrationEngineSeller">{{ translation.subscribe.INTENGSEL }}</option>
                                        <option value="CaoEngineBuyer">{{ translation.subscribe.CLAENGBUY }}</option>
                                        <option value="CaoEngineSeller" selected>{{ translation.subscribe.CLAENGSEL }}</option>
                                        <option value="StandardCustomer">{{ translation.subscribe.STANDARD }}</option>
                                    {{/iff}}
                                </select>
                            </div>
                            <div class="form-group checkboxes">
                                <input type="checkbox" name="termsconditions" id="termsconditions" required>
                                <label for="termsconditions">{{ translation.subscribe.ACCEPT }} <a target="_blank" href="/termsandconditions">{{ translation.general.TERMSCON }}</a></label>
                                <input type="checkbox" name="avg" id="avg" required>
                                <label for="avg">{{ translation.subscribe.ACCEPT }} <a href="/gdpr">{{ translation.general.GDPR }}</a></label>
                            </div>
                            <div class="g-recaptcha" data-sitekey="6LdguR0UAAAAANniwp3vHxcsRnwW3lOu0rz91iwP"></div>
                            <input class="btn-secondary" type="submit" value="{{ translation.subscribe.REGISTER }}">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="text left-text">
            <p>&copy; FlexForceMonkey - {{ year }}</p>
        </div>
        <div class="text right-text">
            <p>{{ translation.footer.SUPPORT1 }} <a href="https://app.flexforcemonkey.com/support">contact</a> {{ translation.footer.SUPPORT2 }}</p>
        </div>
    </footer>
</div>