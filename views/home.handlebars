{{> base-nav}}

<section id="hero" class="home">
    <div class="hero-title">
        <h1>
            <span class="logo">FlexForceMonkey</span><br />
            <span class="sublogo">Business network for Flex</span><br/>
            {{ translation.home.HERO_TEXT }}
        </h1>
    </div>
    <!-- <div class="monkey">
        {{> monkey}}
    </div> -->
    <div class="iframe">
        <div class="iframe-container">
            <iframe src="https://www.youtube.com/embed/UUSmUoriNkA" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
    </div>
    <div class="scrolldiv">
        <button id="inpage_scroll_btn" class="btn-primary standard-button inpage-scroll" onclick="menuScroll('#home-intro')">
            <span class="screen-reader-text">
                {{ translation.home.HERO_PARAGRAPH }}<br />
            </span>
            <span class="fa fa-angle-down"></span>
        </button>
    </div>
</section>

<section id="home-intro" class="full-screen">
    <div class="container">
        <h2 class="section-title">FlexForceMonkey</h2>
        <div class="section-container">
            <p>{{ translation.home.HOME_INTRO }}</p>
            <div class="buttons">
                <a href="/hirer" class="btn-complementary-xl">{{ translation.choice.INTEGRATION }}</a>
                <a href="/supplier" class="btn-complementary-xl">{{ translation.choice.CLAENGINE }}</a>
                <a href="/freelancer" class="btn-complementary-xl">{{ translation.choice.FREELANCER }}</a>
            </div>
        </div>
    </div>
    <img class="small-screen" src="./public/images/stekker-aap-small.png" alt="{{ translation.freelancer_TRY_TITLE }}">
    <img class="normal-screen" src="./public/images/stekker-aap-normal.png" alt="{{ translation.freelancer_TRY_TITLE }}">
    <img class="big-screen" src="./public/images/stekker-aap-big.png" alt="{{ translation.freelancer_TRY_TITLE }}">
</section>

<section id="partners">
    <div class="container">
        <h2 class="section-title">{{ translation.home.OURPARTNERS }}</h2>
        <div class="section-container slide-container">
            <ul class="slides">
                <li class="slide slide-1">
                    <img src="../public/images/imgplaceholder.png" alt="Placeholder">
                </li>
                <li class="slide slide-2">
                    <img src="../public/images/imgplaceholder.png" alt="Placeholder">
                </li>
                <li class="slide slide-3">
                    <img src="../public/images/imgplaceholder.png" alt="Placeholder">
                </li>
            </ul>
        </div>
    </div>
</section>

