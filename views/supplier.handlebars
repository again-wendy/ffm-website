{{> supplier-nav}}

<section id="hero" class="supplier">
    <div class="hero-title">
        <h1>
            {{ translation.supplier.HERO_TEXT }}
        </h1>
    </div>
</section>

<section id="supplier-intro" class="full-screen">
    <div class="container">
        <h2 class="section-title">{{ translation.supplier.INTRO_TITLE }}</h2>
        <div class="section-container">
            <p class="sub-title">{{ translation.supplier.INTRO_SUBTITLE }}</p>
            <img class="scrollleft" src="./public/images/computeraap.png" alt="Computer Monkey">
            <div class="section-text scrollright">
                <p>{{ translation.supplier.INTRO_TEXT_1 }}</p>
                <button class="btn-light-grey-xl">{{ translation.contact-section.MAKE_CONTACT }}</button>
            </div>
        </div>
    </div>
</section>

<section id="supplier-kit" class="full-screen">
    <div class="container">
        <h2 class="section-title">{{ translation.hirer.KIT_INTRO }}</h2>
        <div class="section-container">
            <img class="scrollleft" src="./public/images/ffm-aansluitkit.png" alt="De FlexForceMonkey Aansluitbox">
            <div class="section-text scrollright">
                <p>{{ translation.hirer.KIT_TEXT }}</p>
                <button class="btn-complementary-xl">{{ translation.hirer.GET_KIT }}</button>
            </div>
        </div>
    </div>
</section>

<section id="supplier-options" class="full-screen">
    <div class="container">
        <h2 class="section-title">{{ translation.supplier.DIFFERENT_OPTIONS }}</h2>
        <div class="section-container">
            <p class="sub-title">{{ translation.supplier.OPTIONS }}</p>
            <div class="section-text scrollleft">
                <p>{{ translation.supplier.OPTION_1 }}</p>
                <p>{{ translation.supplier.OPTION_2 }}</p>
                <button class="btn-light-grey-xl">{{ translation.mailchimp.SUBSCRIBE_TO }}</button>
            </div>
            <img class="scrollright" src="./public/images/puzzel-aap.png" alt="Puzzle Monkey">
        </div>
    </div>
</section>

