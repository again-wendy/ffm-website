{{> cla-nav}}

<section id="hero" class="supplier cla">
    <div class="hero-title">
        <h1>
            <strong>{{ translation.supplier.HERO_TEXT }}</strong><br />
            Join the collaborative flex experience!
        </h1>
    </div>
    <div class="iframe">
        <div class="iframe-container">
            <iframe src="https://www.youtube.com/embed/UUSmUoriNkA" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
    </div>
</section>

<section id="supplier-intro" class="full-screen">
    <div class="container">
        <h2 class="section-title">{{ translation.supplier.INTRO_TITLE }}</h2>
        <div class="section-container">
            <p class="sub-title">{{ translation.supplier.INTRO_SUBTITLE }}</p>
            <img class="scrollleft" src="./public/images/computeraap.png" alt="Computer Monkey">
            <div class="section-text scrollright">
                <p>{{ translation.supplier.INTRO_TEXT_1 }}</p>
                <button class="btn-light-grey-xl" onclick="menuScroll('#contact')">{{ translation.supplier.GET_CONTACT }}</button><br /><br />
                <button class="btn-light-grey-xl" onclick="menuScroll('#subscribe-ffm-cla')">{{ translation.supplier.REGISTER_ACCOUNT }}</button>
            </div>
        </div>
    </div>
</section>

<div class="banner banner-supplier">
    <div class="banner-container animation-banner">
        <h1 class="banner-title title-1">{{ translation.general.FASTER }}</h1>
        <h1 class="banner-title title-2">{{ translation.general.FLEXIBLE }}</h1>
        <h1 class="banner-title title-3">{{ translation.general.CAREFREE }}</h1>
        <h1 class="banner-title title-4">{{ translation.general.OPTIMAL }}</h1>
    </div>
</div>

<section id="supplier-kit" class="full-screen">
    <div class="container">
        <h2 class="section-title">{{ translation.supplier.KIT_INTRO }}</h2>
        <div class="section-container">
            <img class="scrollleft" src="./public/images/stekkerdoos.png" alt="De FlexForceMonkey Aansluitbox">
            <div class="section-text scrollright">
                <p>{{ translation.supplier.KIT_TEXT }}</p>
            </div>
            <div class="text-center">
                <a class="btn-complementary-xl text-center" onclick="menuScroll('#contact')">{{ translation.supplier.GET_KIT }}</a><br /><br />
                <button class="btn-complementary-xl" onclick="menuScroll('#subscribe-ffm-cla')">{{ translation.supplier.REGISTER_ACCOUNT }}</button>
            </div>
        </div>
    </div>
</section>

<section id="supplier-options" class="full-screen">
    <div class="container">
        <h2 class="section-title">{{ translation.supplier.AGENCY }}</h2>
        <div class="section-container">
            <div class="section-text scrollleft">
                <p>{{ translation.supplier.AGENCY_TEXT }}</p>
            </div>
            <img class="scrollright" src="./public/images/puzzel-aap.png" alt="Puzzle Monkey">
            <div class="buttons">
                <button class="btn-light-grey-xl" onclick="menuScroll('#contact')">{{ translation.supplier.GET_CONTACT }}</button>
                <button class="btn-light-grey-xl" onclick="menuScroll('#subscribe-ffm-cla')">{{ translation.supplier.REGISTER_ACCOUNT }}</button>
            </div>
        </div>
    </div>
</section>

<section id="subscribe-ffm-cla">
    <div class="container">
        <h2 class="section-title">{{ translation.supplier.SUBSCRIPTIONS }}</h2>
        <div class="section-container">
            <table class="table">
                <thead>
                    <tr>
                        <th width="44%"></th>
                        <th width="28%">Buyer</th>
                        <th width="28%">Seller</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>{{ translation.supplier.table.HRDATA }}</th>
                        <td><span class="fa fa-check green"></span></td>
                        <td><span class="fa fa-check green"></span></td>
                    </tr>
                    <tr>
                        <th>{{ translation.supplier.table.ASSDATA }}</th>
                        <td><span class="fa fa-check green"></span></td>
                        <td><span class="fa fa-check green"></span></td>
                    </tr>
                    <tr>
                        <th>{{ translation.supplier.table.TSDATA }}</th>
                        <td><span class="fa fa-check green"></span></td>
                        <td>&euro; 0,10 {{ translation.hirer.table.PERTS }}</td>
                    </tr>
                    <tr>
                        <th>{{ translation.supplier.table.INVDATA }}</th>
                        <td><span class="fa fa-check green"></span></td>
                        <td><span class="fa fa-check green"></span></td>
                    </tr>
                    <tr>
                        <th>{{ translation.supplier.table.ONB }}</th>
                        <td>{{ translation.supplier.table.FREE }}</td>
                        <td>{{ translation.supplier.table.FREE }}</td>
                    </tr>
                    <tr>
                        <th>{{ translation.supplier.table.CLASETUP }}</th>
                        <td>{{ translation.supplier.table.FREE }}</td>
                        <td>&euro; 750 {{ translation.supplier.table.PERCLA }}</td>
                    </tr>
                </tbody>
            </table>
            <div class="text-center cta-btn">
                <a href="./selfservice-subscribe?sub=cla" class="btn-complementary-xl">{{ translation.supplier.SUBSCRIBE }}</a>
            </div>
        </div>
    </div>
</section>

